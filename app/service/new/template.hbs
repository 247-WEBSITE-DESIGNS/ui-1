<section class="horizontal-form container-fluid">
  <h2>Add Service</h2>
  {{top-errors errors=errors}}

  {{partial "container/edit-name"}}

  <div class="row">
    <div class="col-sm-12 col-md-2 form-label">
      <label>Scale</label>
    </div>
    <div class="col-sm-3 col-md-2">
      <div class="radio small">
        <label>{{radio-button selection=isGlobal value=false}} Run {{service.scale}} container{{#if (not (eq service.scale 1))}}s{{/if}}</label>
      </div>
    </div>
    <div class="col-sm-9 col-md-6">
      {{input-slider value=service.scale valueMin=1 valueMax=10 scaleMin=0 disabled=isGlobal}}
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-md-push-2">
      <div class="radio small">
        <label>{{radio-button selection=isGlobal value=true}} Always run one instance of this container on every host</label>
      </div>
    </div>
  </div>

  {{partial "form-divider"}}

  {{partial "container/new-image"}}

  {{partial "form-divider"}}

  {{partial "container/edit-ports"}}

  {{partial "form-divider"}}

  {{partial "container/edit-services"}}
</section>

{{partial "form-divider"}}

{{partial "container/new-advanced"}}

{{partial "save-cancel"}}
