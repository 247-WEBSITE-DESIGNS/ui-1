<section>
  <h3>
    <span class="right-divider">Registries</span>
    {{#link-to "settings.registry-new" classNames="btn btn-sm btn-primary right-divider-btn"}}Add Registry{{/link-to}}
  </h3>
</section>

<section class="well instances">
  <table class="grid fixed" style="margin-bottom: 0">
    <thead>
      <tr>
        {{sortable-th sortable=this action="changeSort" name="state" width="110"}}
        {{sortable-th sortable=this action="changeSort" name="address"}}
        {{sortable-th sortable=this action="changeSort" name="email"}}
        {{sortable-th sortable=this action="changeSort" name="username"}}
        {{sortable-th sortable=this action="changeSort" name="created"}}
        <th width="50">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each arranged as |registry|}}
        <tr>
          <td>
            <span class="badge state {{registry.stateBackground}}">
              {{registry.displayState}}
            </span>
          </td>
          <td>
            {{registry.displayAddress}}
          </td>
          <td>
            {{#if registry.credential.email}}{{registry.credential.email}}{{else}}<i class="text-muted">None</i>{{/if}}
          </td>
          <td>
            {{#if registry.credential.publicValue}}{{registry.credential.publicValue}}{{else}}<i class="text-muted">None</i>{{/if}}
          </td>
          <td>
            {{date-calendar registry.created}}
          </td>
          <td align="right">
            {{#with registry controller="registry" as |ctrl|}}
              {{resource-actions-menu model=ctrl choices=ctrl.availableActions parentController=this}}
            {{/with}}
          </td>
        </tr>
      {{else}}
        <tr><td colspan="6" class="text-center text-muted">You don't have any registries yet.</td></tr>
      {{/each}}
    </tbody>
  </table>
</section>
