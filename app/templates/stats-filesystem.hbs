<label class="section">Storage</label>
<div class="well">
  {{#if view.stats.available}}
    {{#if view.stats.active}}
      <table class="table" width="100%">
        <tr>
          <th>Device</th>
          <th width="150">Size</th>
          <th>Usage</th>
        </tr>
        {{#each fs in view.stats.filesystem}}
          <tr>
            <td>{{fs.device}}</td>
            <td>{{fs.size_gb}} GB</td>
            <td>
              {{progress-bar value=fs.used_percent textSuffix="% Used"}}
            </td>
          </tr>
        {{/each}}
      </table>
    {{else}}
      <div style="padding: 20px; text-align: center;" class="text-muted">
        <i class="fa fa-spinner fa-spin"></i> Connecting...
      </div>
    {{/if}}
  {{else}}
    <div style="padding: 20px; text-align: center;" class="text-muted">
      Storage utilization is available only when active.
    </div>
  {{/if}}
</div>
