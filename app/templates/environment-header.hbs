<div>
  <div class="btn-group pull-right">
    {{#link-to "environment.index" classNames="btn btn-sm btn-default"}}<i class="ss-thumbnails"></i>{{/link-to}}
    {{#link-to "environment.code" classNames="btn btn-sm btn-default"}}<i class="ss-file"></i>{{/link-to}}
  </div>
  <button class="btn btn-sm btn-primary" {{action "activateServices"}} {{bind-attr disabled=activateDisabled}}>Start Environment</button>
  <button class="btn btn-sm btn-danger" {{action "deactivateServices"}} {{bind-attr disabled=deactivateDisabled}}>Stop Environment</button>
  <button class="btn btn-sm btn-default" {{action "download"}}><i class="ss-download"></i> Download</button>
</div>
