<div class="row">
  <div class="col-xs-6 col-md-2 form-label">
    <label>Targets</label>
  </div>
  <div class="col-xs-6 col-md-8">
    <button class="btn-circle-plus btn-circle-text" style="margin-right: 20px;" {{action "addTargetIp" target="view"}}>Add External IP</button>
  </div>
</div>
<div class="row">
  <div class="col-sm-12 col-md-8 col-md-offset-2">
    {{#if targetIpArray.length}}
      <table class="table fixed no-lines no-top-padding tight">
        {{#each tgt in targetIpArray}}
          <tr>
            <td>
              {{input type="text" class="form-control input-sm target-ip" value=tgt.value placeholder="e.g. 192.0.2.24"}}
            </td>
            <td width="30" class="text-right">
              <button {{action "removeTargetIp" tgt}} class="btn-circle-x" type="button" tabindex="-1"></button>
            </td>
          </tr>
        {{/each}}
      </table>
    {{/if}}
  </div>
</div>
