<div class="row">
  <div class="col-sm-12 col-md-2 form-label">
    <label>Service Links</label>
  </div>

  <div class="col-sm-12 col-md-8">
    <div>
      {{#if serviceChoices.length}}
        <button class="btn-circle-plus" {{action "addServiceLink" target="view"}}></button>
      {{else}}
        <span class="text-muted">There are no other services to link to.</span>
      {{/if}}
    </div>
    {{#if serviceLinksArray.length}}
      <table class="table fixed no-lines no-top-padding tight small">
        <tr class="text-muted">
          <th>Destination Service</th>
          <th width="30">&nbsp;</th>
          <th>As Name</th>
          <th width="30">&nbsp;</th>
        </tr>
        {{#each link in serviceLinksArray}}
          <tr>
            <td>
              {{display-name-select
                classNames="form-control service-link input-sm"
                prompt="Select a service..."
                value=link.serviceId
                content=serviceChoices
                optionValuePath="content.id"
                optionLabelPath="content.name"
                optionGroupPath="group"
              }}
            </td>
            <td class="text-center">
              <p class="form-control-static"><i class="ss-right"></i></p>
            </td>
            <td>
              {{#if link.existing}}
                <p class="form-control-static input-sm text-muted">{{link.linkName}}</p>
              {{else}}
                {{input class="form-control input-sm" type="text" value=link.linkName placeholder="e.g. database"}}
              {{/if}}
            </td>
            <td class="text-right">
              {{#unless link.existing}}
                <button {{action "removeServiceLink" link}} class="btn-circle-x" type="button" tabindex="-1"></button>
              {{/unless}}
            </td>
          </tr>
        {{/each}}
      </table>
    {{else}}
      {{#if editing}}
        <span class="text-center text-muted">This service has no service links.</span>
      {{/if}}
    {{/if}}
  </div>
</div>
