<section class="horizontal-form container-fluid">
  <h2>Add Load Balancer</h2>
  {{partial "top-error"}}

  <div class="row form-group">
    <div class="col-sm-12 col-md-2 form-label">
      <label for="name">Name</label>
    </div>
    <div class="col-sm-12 col-md-8">
      {{input id="name" type="text" value=balancer.name classNames="form-control" placeholder="e.g. Website"}}
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-12 col-md-2 form-label">
      <label for="description">Description</label>
    </div>
    <div class="col-sm-12 col-md-8">
      {{textarea id="description" value=balancer.description classNames="form-control no-resize" rows="5" placeholder="e.g. Balancer for mycompany.com"}}
    </div>
  </div>

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <hr/>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6 col-md-2 form-label">
      <label>Hosts</label>
    </div>
    <div class="col-xs-6 col-md-8">
      <p class="help-block" style="margin: 0;">Choose one or more hosts to run balancing agents on</p>
      <button class="btn-circle-plus" {{bind-attr disabled=hostDisabled}} {{action "addHost" target="view"}}></button>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-sm-12 col-md-8 col-md-offset-2">
      {{partial "loadbalancer/edit-hosts"}}
    </div>
  </div>

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <hr/>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6 col-md-2 form-label">
      <label>Targets</label>
    </div>
    <div class="col-xs-6 col-md-8">
      <p class="help-block" style="margin: 0;">Choose one or more targets to send traffic to</p>
      <button class="btn-circle-plus btn-circle-text" style="margin-right: 20px;" {{action "addTargetContainer" target="view"}}>Add Container</button>
      <button class="btn-circle-plus btn-circle-text" {{action "addTargetIp" target="view"}}>Add External IP Address</button>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-sm-12 col-md-8 col-md-offset-2">
      {{partial "loadbalancer/edit-targets"}}
    </div>
  </div>
</section>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <hr/>
  </div>
</div>

<section class="text-center" style="padding: 0;">
  <ul class="nav nav-pills" style="display: inline-block">
    <li role="presentation" class="tab" data-section="listeners" {{action "selectTab" "listeners" target=view}}><a>Listeners</a></li>
    <li role="presentation" class="tab" data-section="healthcheck" {{action "selectTab" "healthcheck" target=view}}><a>Health Check</a></li>
    <li role="presentation" class="tab" data-section="stickiness" {{action "selectTab" "stickiness" target=view}}><a>Stickiness</a></li>
  </ul>
</section>

<section class="horizontal-form tab-section" style="background-color: #f8f9fa; margin: -7px 10px 0 10px;">
  <div class="section container-fluid" data-section="listeners">
    <div class="row">
      <div class="col-xs-12">
        <label>Listening Ports</label>
        &nbsp;
        <button class="btn-circle-plus" {{action "addListener" target="view"}}></button>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-8 col-md-offset-2">
        {{partial "loadbalancer/new-listeners"}}
      </div>
    </div>
  </div>

  <div class="section container-fluid tab-section" data-section="healthcheck">
    {{partial "loadbalancer/edit-healthcheck"}}
  </div>

  <div class="section container-fluid tab-section" data-section="stickiness">
    {{partial "loadbalancer/edit-stickiness"}}
  </div>
</section>

{{partial "save-cancel"}}
