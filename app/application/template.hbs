{{liquid-modal}}
<div id="underlay" class="underlay hide"></div>
<div id="loading-underlay" class="underlay"></div>
<div id="loading-overlay" class="loading-overlay">
  {{#if settings.isPrivateLabel}}
    <div class="loader">
      <div class="loader-inner ball-clip-rotate-pulse">
        <div></div>
        <div></div>
      </div>
    </div>
  {{else}}
    <div class="loader">
      <div class="orbit">
        <div class="sun"></div>
        <div class="moon"></div>
      </div>

      <div class="loadfield">
        <div class="grass"></div>
        <img class="cow" src="{{app.baseAssets}}assets/images/logos/main-loading.svg" />
      </div>
    </div>
  {{/if}}
</div>

{{outlet "overlay"}}
{{outlet "error"}}
<div id="application">
  {{outlet}}
</div>
<ul id="resource-actions" class="hide resource-actions global-actions dropdown-menu dropdown-menu-right" role="menu">
  {{#each resourceActions.activeActions as |item|}}
    {{#if item.divider}}
      <li class="divider"></li>
    {{else}}
      <li>
        {{action-menu-item
          label=item.label
          icon=item.icon
          action="clickedAction"
          actionArg=item.action
          altActionArg=item.altAction
        }}
      </li>
    {{/if}}

  {{else}}
    <li><a disabled="true">No actions available</a></li>
  {{/each}}

</ul>
{{component tooltip class="container-tooltip" id="tooltip-base"}}
