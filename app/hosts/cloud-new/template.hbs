<section class="header clearfix hosts-cloud-new">
  <div class="row">
    <div class="col span-2 mb-0">
      <h1>
        {{#link-to "infrastructure-tab"}}{{t 'hostsPage.new.header.linkTo'}}{{/link-to}}
        {{t 'hostsPage.new.header.text'}}
      </h1>
    </div>
    {{#select-tab initialTab=initialTab tab=(mut tab) tagName='div' classNames='col span-10 mb-0' as |component|}}
      <div class="tabs">
        <ul class="tab-header" style="display: inline-block" role="tablist">
          <li role="tab" aria-controls="panel" class="tab" data-section="favorites" {{action "selectTab" "favorites" target=component}}>
            <a href="#">{{t 'hostsPage.cloudHostsPage.tabs.fav'}}</a>
          </li>
          <li role="tab" aria-controls="panel" class="tab" data-section="providers" {{action "selectTab" "providers" target=component}}>
            <a href="#">{{t 'hostsPage.cloudHostsPage.tabs.prov'}}</a>
          </li>
          <li role="tab" aria-controls="panel" class="tab" data-section="browse" {{action "selectTab" "browse" target=component}}>
            <a href="#">{{t 'hostsPage.cloudHostsPage.tabs.browse'}}</a>
          </li>
        </ul>
      </div>
    {{/select-tab}}
  </div>
</section>

<section class="mt-20">
  <div class="horizontal-form" role="tabpanel">
    <div class="section" data-section="{{from}}">
      {{partial (concat 'host/cloud/' from)}}
    </div>
  </div>
</section>