{{#authorize-user}}
  <h1>
    {{format-html-message 'loginPage.greeting' appName=settings.appName}}
    <div class="logo"></div>
  </h1>
  <section class="pb-0">
    {{language-dropdown login=true class='mt-10 mb-10'}}
    <br/>
    {{#unless promptPasswordReset}}
      {{#if isGithub}}
        <p>{{t 'loginPage.githubMessage' appName=settings.appName}}</p>
        <br/>
      {{/if}}

      {{#if isShibboleth}}
        <p>{{t 'loginPage.shibbolethMessage' appName=settings.appName}}</p>
        <br/>
      {{/if}}

      {{#if infoMsg}}
        <div class="alert {{if errorMsg 'alert-danger' 'alert-warning'}}" role="alert">{{infoMsg}}</div>
      {{/if}}

      {{#if (or isLocal isActiveDirectory isOpenLdap isAzureAd)}}
        {{login-user-pass action="authenticate" waiting=waiting}}
      {{/if}}

      {{#if isGithub}}
        {{login-github action="started" waiting=waiting}}
      {{/if}}
      {{#if isShibboleth}}
        {{login-shibboleth action="started" waiting=waiting}}
      {{/if}}
    {{/unless}}

    {{#if isCaas}}
      {{caas-login promptReset=(mut promptPasswordReset) errMsg=(mut errorMsg)}}
    {{/if}}
    <span style="color: white">{{access.provider}}</span>
  </section>
{{/authorize-user}}