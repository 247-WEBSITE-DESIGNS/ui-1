<section>
  <h3>
    <span class="right-divider">Containers</span>
    {{#link-to "containers.new" classNames="btn btn-sm btn-primary right-divider-btn"}}Add Container{{/link-to}}
  </h3>
</section>

<section class="well instances">
  <table class="grid fixed" style="margin-bottom: 0;">
    <thead>
      <tr>
        <th width="90">State</th>
        <th>Name</th>
        <th width="110">IP Address</th>
        <th>Image</th>
        <th>Command</th>
        <th class="actions" width="50">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each container in model itemController="container"}}
        <tr>
          <td>
            <span {{bind-attr class=":badge :state container.stateBackground"}}>
              {{container.displayState}}
            </span>
          </td>
          <td class="force-wrap">
            {{#link-to "container" container.id}}{{container.displayName}}{{/link-to}}
          </td>
          <td>
            {{container.displayIp}}
          </td>
          <td class="clip">
            {{display-image container.imageUuid}}
          </td>
          <td class="clip">
            {{#if container.command}}
              {{container.command}}
            {{else}}
              <span class="text-muted">None</span>
            {{/if}}
          </td>
          <td class="actions">
            {{#unless container.isManaged}}
              {{resource-actions-menu model=container choices=container.availableActions}}
            {{/unless}}
          </td>
        </tr>
      {{else}}
        <tr><td colspan="5" class="text-center text-muted">You do not have any containers yet.</td></tr>
      {{/each}}
    </tbody>
  </table>
</section>

