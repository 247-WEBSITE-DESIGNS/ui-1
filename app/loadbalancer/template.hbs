<aside>
  <label>Load Balancer</label>
  {{resource-actions-menu model=this choices=availableActions classNames="pull-right"}}
  <h3 class="force-wrap">{{displayName}}</h3>

  <hr/>

  {{#if description}}
    <label style="margin-top: 10px;">Description</label>
    <p>{{description}}</p>
    <hr/>
  {{/if}}

  <div class="links">
    {{#link-to "loadbalancer.index"}}
      <i class="ss-barchart"></i> Monitoring
    {{/link-to}}
    {{#link-to "loadbalancer.hosts"}}
      <i class="ss-database" style="position: relative; top: 1px"></i> Hosts <span class="badge">{{hosts.length}}</span>
    {{/link-to}}
    {{#link-to "loadbalancer.targets"}}
      <i class="ss-target" style="position: relative; top: 1px"></i> Targets <span class="badge">{{loadBalancerTargets.length}}</span>
    {{/link-to}}
    {{#link-to "loadbalancer.config"}}
      <i class="ss-file"></i> Configuration
    {{/link-to}}
  </div>

  <hr/>

  <div class="clearfix">
    <label>Info</label>
  </div>

  <ul class="list-circles">
    <li>
      <i {{bind-attr class="stateIcon :fa-fw"}}></i>
      {{displayState}}
      {{#if showTransitioningMessage}}
        <div class="force-wrap">
          {{transitioningMessage}}
        </div>
      {{/if}}
    </li>

    {{#if hostsBlurb}}
      <li>
        <i class="fa-fw ss-database"></i>
        {{hostsBlurb}}
      </li>
    {{/if}}
  </ul>
</aside>

{{outlet}}
