<h2>{{t 'userSettingsPage.theme'}}</h2>
<hr/>
<div class="container-theme-toggle">
  <div class="{{if (eq theme 'ui-light') 'active' ''}}" {{action 'changeTheme' 'ui-light'}}>
    <i class="icon icon-sun icon-4x"></i>
    <div>
      {{t 'nav.user.themeLight'}}
    </div>
  </div>
  <div class="{{if (eq theme 'ui-auto') 'active' ''}}"  {{action 'changeTheme' 'ui-auto'}} >
    <i class="icon icon-auto icon-4x"></i>
    <div>
      {{t 'nav.user.themeAuto'}}
    </div>
  </div>
  <div class="{{if (eq theme 'ui-dark') 'active' ''}}" {{action 'changeTheme' 'ui-dark'}} >
    <i class="icon icon-moon icon-4x"></i>
    <div>
      {{t 'nav.user.themeDark'}}
    </div>
  </div>
  <p class="help-block">{{t 'userSettingsPage.themeAuto'}}</p>
</div>
