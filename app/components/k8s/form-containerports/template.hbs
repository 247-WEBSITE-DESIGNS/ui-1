<div class="col-sm-12 col-md-2 form-label">
  <label>Port Map</label>
</div>
<div class="col-sm-12 col-md-8">
  {{#unless editing}}
    <div>
      <button class="btn-circle" {{action "addPort"}}><i class="icon icon-plus-circle"/> Add Port</button>
    </div>
  {{/unless}}

  {{#if portsArray.length}}
    <table class="table fixed no-lines no-top-padding tight small">
      <tr class="text-muted">
        <th>Name</th>
        <th width="30">&nbsp;</th>
        <th>Host IP</th>
        <th width="30">&nbsp;</th>
        <th>Host Port</th>
        <th width="30">&nbsp;</th>
        <th>Container Port</th>
        <th width="30">&nbsp;</th>
        <th width="60">Protocol</th>
        <th width="30">&nbsp;</th>
      </tr>
      {{#each portsArray as |row|}}
        <tr>
          <td>
            {{input class="form-control input-sm" type="text" value=row.name placeholder="e.g. web"}}
          </td>

          <td class="text-center">&nbsp;</td>

          <td>
            {{input class="form-control input-sm" type="text" value=row.hostIP placeholder="e.g. 19.82.2.24"}}
          </td>

          <td class="text-center">&nbsp;</td>

          <td>
            {{input class="form-control input-sm" type="number" min="1" max="65535" value=row.hostPort placeholder="e.g. 80"}}
          </td>

          <td class="text-center">
            <p class="form-control-static"><i class="icon icon-chevron-right"></i></p>
          </td>

          <td>
            {{input class="form-control input-sm" type="text" value=row.containerPort placeholder="e.g. 8080"}}
          </td>

          <td class="text-center">/</td>

          <td>
            {{new-select
              class="form-control input-sm"
              content=protocolOptions
              value=row.protocol
            }}
          </td>

          <td class="text-right">
            <button class="btn-circle" {{action "removePort" row}} tabindex="-1"><i class="icon icon-x-circle"/></button>
          </td>
        </tr>
      {{/each}}
    </table>
  {{else}}
    {{#if editing}}
      <span class="text-center text-muted">This container has no port maps.</span>
    {{/if}}
  {{/if}}
</div>
