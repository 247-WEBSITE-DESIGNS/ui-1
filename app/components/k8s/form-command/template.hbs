<div class="row form-group">
  <div class="col-sm-12 col-md-2 form-label">
    <label class="form-control-static">Command (Entrypoint)</label>
  </div>

  <div class="col-sm-12 col-md-10">
    {{input-command class="form-control" type="text" changed=(action (mut model.command)) initialValue=model.command placeholder="e.g. /bin/sh -c"}}
  </div>
</div>

<div class="row form-group">
  <div class="col-sm-12 col-md-2 form-label">
    <label class="form-control-static">Args</label>
  </div>
  <div class="col-sm-12 col-md-4">
    {{input-command class="form-control" type="text" changed=(action (mut model.args)) initialValue=model.args placeholder="e.g. /usr/sbin/httpd -f httpd.conf"}}
  </div>

  <div class="col-sm-12 col-md-2 form-label">
    <label class="form-control-static">Working Dir</label>
  </div>
  <div class="col-sm-12 col-md-4">
    {{input class="form-control" type="text" value=model.workingDir placeholder="e.g. /home"}}
  </div>
</div>
<div class="row form-group">
  <div class="col-sm-12 col-md-2 form-label">
    <label class="form-control-static">Run as User ID</label>
  </div>
  <div class="col-sm-12 col-md-4">
    {{input type="number" value=model.securityContext.runAsUser classNames="form-control" placeholder="e.g. 501"}}
  </div>
  <div class="col-sm-12 col-md-2 form-label">
    <label>Console</label>
  </div>

  <div class="col-xs-12 col-md-4">
    <div class="checkbox input pull-left r-mr20">
      <label>{{input type="checkbox" checked=model.stdin}} StdIn</label>
    </div>
    <div class="checkbox input pull-left r-mr20">
      <label>{{input type="checkbox" checked=model.stdinOnce}} StdIn Once</label>
    </div>
    <div class="checkbox input pull-left r-mr20">
      <label>{{input type="checkbox" checked=model.tty}} TTY</label>
    </div>
  </div>
  <div class="col-xs-12 col-sm-6 col-md-4">
  </div>
</div>


<div class="row">
  <div class="col-sm-12 col-md-2 form-label">
    <label class="form-control-static">Environment</label>
  </div>

  <div class="col-sm-12 col-md-10 form-control-static">
    {{form-key-value
      changed=(action "envChanged")
      nameLabel="Environment Variable"
      keyLabel="Name"
      keyPlaceholder="e.g. HTTP_PROXY"
      valuePlaceholder="e.g. http://your-proxy:8080"
    }}
  </div>
</div>

