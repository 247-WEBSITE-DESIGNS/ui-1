{{#if model.length}}
  <table class="table fixed no-lines r-mb0">
    <thead>
      <tr>
        <th>Pod Name</th>
        <th>Status</th>
        <th>Containers</th>
        <th>Host IP</th>
        <th>Pod IP</th>
        <th class="actions" width="85">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |pod|}}
        {{k8s/pod-row model=pod}}
      {{/each}}
    </tbody>
  </table>
{{else}}
  <span class="text-muted">No Pods</span>
{{/if}}
