{{#if model.length}}
  <table class="grid fixed no-lines r-mb0">
    <thead>
      <tr>
        <th>Pod Name</th>
        <th width="150">Status</th>
        <th width="150">Containers</th>
        <th width="150">Host IP</th>
        <th width="150">Pod IP</th>
        <th class="actions" width="85">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |pod|}}
        {{k8s/pod-row model=pod}}
      {{/each}}
    </tbody>
  </table>
{{else}}
  <span class="text-muted">No Pods</span>
{{/if}}
