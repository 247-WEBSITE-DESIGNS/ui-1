{{yield}}
{{#if saving}}
  <button class="btn btn-primary btn-disabled"><i class="icon icon-spinner icon-spin"></i> Saving...</button>
{{else}}
  <button {{action "save"}} disabled={{saveDisabled}} class="btn btn-primary">{{#if editing}}{{editLabel}}{{else}}{{createLabel}}{{/if}}</button>
{{/if}}
{{#unless cancelDisabled}}
  <button {{action "cancel"}} class="btn btn-link">{{cancelLabel}}</button>
{{/unless}}
