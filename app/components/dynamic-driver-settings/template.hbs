<h4>Machine Drivers</h4>
<h5>Add or remove custom machine drivers.</h5>
<hr>

<button class="btn-circle-text r-mb10" {{action 'addNewDriver'}}><i class="icon icon-plus-circle"/> <span>Add Machine Driver</span></button>
<table class="grid fixed" style="margin-bottom: 0;">
  <thead>
    <tr>
      <th width="100">State</th>
      {{sortable-th sortable=this action="changeSort" name="name" width="175"}}
      {{sortable-th sortable=this action="changeSort" name="uri" width="" label='URI'}}
      {{sortable-th sortable=this action="changeSort" name="md5checksum" width="275" label='MD5 Checksum'}}
      <th class="actions" width="50">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    {{#each arranged as |driver|}}
      <tr>
        <td>{{badge-state model=driver}}</td>
        <td class="clip">{{driver.name}}</td>
        <td class="clip">
          <a href={{driver.uri}} target="_blank">{{driver.displayURI}}</a>
        </td>
        <td>{{driver.displayChecksum}}</td>
        <td class="clip">
          {{action-menu model=driver showPrimary=false}}
        </td>
      </tr>
    {{else}}
      <tr><td colspan="" class="text-center text-muted">You have no Dynamic Machine Drivers.</td></tr>
    {{/each}}
  </tbody>
</table>
