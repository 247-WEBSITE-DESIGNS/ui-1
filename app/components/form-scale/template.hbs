{{#if (or editing (not showGlobal))}}
  <div class="form-label">
    <label class="form-control-static">{{label}}</label>
  </div>

  <div class="row form-group">
    {{#if isGlobal}}
      <div class="col-sm-12 col-md-12">
        <span class="text-muted"> Always run one instance of this {{if isVm 'virtual machine' 'container'}} on every host</span>
      </div>
    {{else}}
      <div class="col-sm-2 col-md-2">
        {{scale}}
      </div>
      <div class="col-sm-10 col-md-10">
        {{input-slider value=scale valueMax=max scaleMax=oneLouder}}
      </div>
    {{/if}}
  </div>
{{else}}
  <div class="form-label">
    <label class="form-control-static">{{label}}</label>
  </div>
  <div class="row">
    <div class="col-sm-3 col-md-3">
      <div class="radio">
        <label>{{radio-button selection=isGlobal value=false}} Run {{scale}} {{if isVm 'virtual machine' 'container'}}{{#if (not (eq scale 1))}}s{{/if}}</label>
      </div>
    </div>
    <div class="col-sm-9 col-md-9">
      {{input-slider value=scale valueMax=max scaleMax=oneLouder disabled=isGlobal}}
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-12">
      <div class="radio">
        <label>{{radio-button selection=isGlobal value=true}} Always run one instance of this {{if isVm 'virtual machine' 'container'}} on every host</label>
      </div>
    </div>
  </div>
{{/if}}
